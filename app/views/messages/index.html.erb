<center><br/>



<div class="card" style="width: 100rem;">
  <ul class="list-group list-group-flush">
  	<li class="list-group-item"><h1>Index</h1></li>
    <li class="list-group-item">

		<% @messages.each do |m| %>

				<div class="card text-center">
 				<div class="card-header">
						<h3><strong>Title: <%= m.title%></strong></h3><br/>
  				</div>
  				<div class="card-body">
    				<h5 class="card-title"><%= link_to "View Message", message_path(m),class: "btn-sm btn-secondary" %><br></h5>
  				</div>
				</div>
		<% end %>

    </li>
  </ul>
  <div class="card-footer">
		<%= link_to "New Messsage", new_message_path, class:"btn btn-lg btn-primary"%>  </div>
</div>

</center>


